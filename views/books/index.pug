extends ../layouts/common

block content
	a.mb-5(class="btn btn-primary ", href="/books/add-book") Add books
	h1 List book
	table.table
		tr
			th Title
			th Description
			th(colspan='2') Action
		each book in books
			tr
				td= book.title
				td= book.description
				td
					a.btn.btn-light(href="/books/"+book.id+"/delete" ) Delete
				td
					a.btn.btn-light(href="/books/"+book.id+"/update" ) Update

